@model IEnumerable<TpCrApp.Models.TouristPlace>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TouristPlaceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TouristPlaceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TouristPlaceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TouristPlaceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TouristPlaceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TouristPlaceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TouristPlaceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
